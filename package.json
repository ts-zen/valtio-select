{
  "name": "valtio-select",
  "version": "0.2.0",
  "description": "Fine-grained subscriptions to Valtio proxies with automatic re-tracking on structural changes",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "check": "biome check --verbose --files-ignore-unknown=true src/** *.*",
    "check:write": "bun run check -- --write",
    "build": "tsc --p tsconfig.build.json",
    "test:ts": "bun test",
    "test:ts:coverage": "bun test --coverage --coverage-reporter=lcov --bail",
    "test:types": "tsd -t ./dist/index.d.ts -f ./src/useTrackedSnapshot.test-d.ts -f ./src/trackedSubscription.test-d.ts"
  },
  "peerDependencies": {
    "valtio": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@happy-dom/global-registrator": "^19.0.2",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.23",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3",
    "valtio": "^2.1.8"
  }
}
